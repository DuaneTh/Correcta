{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "app/api/**/*.ts",
    "app/api/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "app/**/page.tsx",
    "app/**/layout.tsx",
    "app/**/loading.tsx",
    "app/**/error.tsx",
    "app/**/not-found.tsx",
    "components/**",
    ".next/**",
    ".test-dist/**",
    "node_modules/**"
  ]
}
